{
    "name": "mvqn/ucrm-client-form",
    "description": "A simple web form for use on stand-alone websites, where visitors can register and UCRM Client leads can be automatically generated.",
    "minimum-stability": "stable",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@mvqn.net"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-json": "*",
        "ext-curl": "*",
        "twig/twig": "~2",
        "phpmailer/phpmailer": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.2.7",
        "vlucas/phpdotenv": "2.5.1"
    },
    "autoload": {
        "psr-4": {
            "MVQN\\": "www/src/MVQN/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "config": {
        "vendor-dir": "www/vendor/"
    }
}